{
    "languageserver": {
        "clangd": {
            "command": "clangd",
            "args": [
                "--background-index",
                "-clang-tidy"
            ],
            "rootPatterns": [
                "compile_flags.txt",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ]
        }
    },
    "coc.preferences.snippets.enable": false,
    "diagnostic.virtualText": true
}
